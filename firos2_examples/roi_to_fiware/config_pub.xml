<?xml version="1.0"?>
<is>
    <profiles>
        <participant profile_name="detector">
            <rtps>
                <builtin>
                    <domainId>5</domainId>
                </builtin>
            </rtps>
        </participant>

        <subscriber profile_name="is_subscriber">
            <topic>
                <name>rt/region_of_interest</name>
                <dataType>nettools_msgs::msg::dds_::RoiWithHeader_</dataType>
            </topic>
            <historyMemoryPolicy>DYNAMIC</historyMemoryPolicy>
        </subscriber>

    </profiles>

    <bridge name="ngsiv2">
        <library>libisbridgengsiv2lib.so</library> <!-- Path to the NGSIv2 library -->

        <writer name="ngsiv2_publisher">
            <property>
                <name>host</name>
                <value>localhost</value>
            </property>
            <property>
                <name>port</name>
                <value>1026</value>
            </property>
        </writer>
    </bridge>

    <connector name="domain_change">
        <reader participant_profile="detector" subscriber_profile="is_subscriber"/>
        <writer bridge_name="ngsiv2" writer_name="ngsiv2_publisher"/>
        <transformation file="build/libuserlib.so" function="transform"/> 
    </connector>
</is>
