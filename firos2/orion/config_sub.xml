<?xml version="1.0"?>
<is>
    <profiles>
        <participant profile_name="ros2">
            <rtps>
                <builtin>
                    <domainId>0</domainId>
                </builtin>
            </rtps>
        </participant>

        <publisher profile_name="ros2_publisher">
            <topic>
                <name>rt/region_of_interest</name>
                <dataType>nettools_msgs::msg::dds_::RoiWithHeader_</dataType>
            </topic>
            <historyMemoryPolicy>DYNAMIC</historyMemoryPolicy>
        </publisher>
    </profiles>

    <bridge name="ngsiv2">
        <library>libisbridgengsiv2lib.so</library>

        <reader name="ngsiv2_subscriber">
            <property>
                <name>host</name>
                <value>localhost</value>
            </property>
            <property>
                <name>port</name>
                <value>1026</value>
            </property>
